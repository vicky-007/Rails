<h1>Edit post</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |x|%>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |error|%>
            <div class="alert alert-danger"> 
                <%= error %>
            </div>
        <% end %>
    <% end %>

    <p>
        <%= x.label :title %><br>
        <%= x.text_field(:title, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= x.label :body %><br>
        <%= x.text_field(:body, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= x.submit({:class => 'btn btn-primary'}) %><br>
    </p>
<% end %>
    

